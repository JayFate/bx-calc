.content {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-family: "Microsoft YaHei";
  overflow: hidden;
  flex-wrap: wrap;
}

.layout-top {
  background-color: #ccc;
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-wrap: wrap;
  overflow: overlay;
  margin: 6rpx 6rpx 6rpx 6rpx;
}

.no-bottom {
  margin-bottom: 0;
}

.screen {
  text-align: left;
  width: 100%;
  line-height: 60rpx;
  overflow: overlay;
  overflow-wrap: break-word;
  font-size: 40px;
  box-sizing: border-box;
  border-bottom: 6rpx white solid;
}

.twoline {
  font-size: 30px;
}

.threeline {
  font-size: 20px;
}

.layout-bottom {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.item {
  width: 180rpx;
  height: 170rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 6rpx;
  border-radius: 0px;
  color: #d9eef7;
  background-color: #0095cd;
}

.item-orange {
  color: #fef4e9;
  background: #f78d1d;
}

.icon {
  color: white;
  background: center/30% no-repeat #0095cd url("data:image/svg+xml;base64,");
}

.item-orange::after {
  border-radius: 0;
}
